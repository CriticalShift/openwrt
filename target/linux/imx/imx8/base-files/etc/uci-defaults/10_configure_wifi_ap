#!/bin/sh

. /lib/functions.sh

DEFAULT_SSID="Shield"
DEFAULT_PASSWORD="shield_demo2025"

uci -q batch <<EOI
set wireless.radio0=wifi-device
set wireless.radio0.type=mac80211
set wireless.radio0.phy=mwiphy0
set wireless.radio0.band=5g
set wireless.radio0.htmode=VHT80
set wireless.radio0.channel=auto
set wireless.radio0.country=US
set wireless.radio0.disabled=0

set wireless.default_radio0=wifi-iface
set wireless.default_radio0.device='radio0'
set wireless.default_radio0.mode=ap
set wireless.default_radio0.network=lan
set wireless.default_radio0.ssid=$DEFAULT_SSID
set wireless.default_radio0.encryption=psk2
set wireless.default_radio0.key=$DEFAULT_PASSWORD
EOI

uci -q commit wireless

wifi reload